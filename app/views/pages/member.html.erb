
<a href='<%=root_url%>'><img class='logo' src="http://res.cloudinary.com/dsiyhc1tt/image/upload/v1479235744/meetup-logo_h5atgk.png"></a>

<h1 class='title'> Welcome <%= current_user.name %>! </h1>
<!-- Links to sign in and out with Meetup -->
  <%= link_to "Sign Out", signout_path %>

<h2>Recommended Events for you</h2>
<% @recommended_events.each do |re| %>
<div class="recommended-events">
  <ul>
    <li><%= re["name"] %></li>
    <li><%= re["group"]["name"] %></li>
  </ul>
</div>
<% end %>

<h2>Your groups</h2>
<% @groups.each do |group| %>
<div class="group">

  <div class="group-title"><%= group["name"] %></div>

  <div class="image">
  <a href="<%= group["group_photo"]["photo_link"]%>">
    <img src="<%= group["group_photo"]["thumb_link"] %>"><img><br>
  </a>
  </div>

  <p><%#= group["description"] %> </p>

  <a href="<%= group["link"]%>">See this group on Meetup.com</a><br>

    <!-- <ul>
    <%# group["topics"].each do |topic| %>
    <li><%#= topic["name"] %></li>
    <%# end %>
    </ul> -->
</div>
<br>
<% end %>
